# StreamFlix Demo Environment Configuration

# Application Settings
NODE_ENV=development
PORT=3000

# Tokn Integration Settings
TOKN_CLIENT_ID=your-tokn-client-id
TOKN_CLIENT_SECRET=your-tokn-client-secret
TOKN_API_URL=https://api.tokn.co
TOKN_REDIRECT_URI=http://localhost:3000/auth/callback

# Security Settings (Optional)
SESSION_SECRET=your-session-secret-key
JWT_SECRET=your-jwt-secret-key

# Database Settings (If needed for user sessions)
# DATABASE_URL=postgresql://user:password@localhost:5432/tokn_demo
# REDIS_URL=redis://localhost:6379

# Logging Settings
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com

# Rate Limiting (Optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
DEMO_MODE=true
ENABLE_ANALYTICS=false
ENABLE_MONITORING=false